<UserControl
    x:Class="Ed.Steamflix.Universal.MobileNavigationPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ed.Steamflix.Universal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <CommandBar>
        <AppBarButton x:Name="Home" Tapped="Home_Tapped" Label="Games">
            <AppBarButton.Icon>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE10F;" FontSize="20" />
            </AppBarButton.Icon>
        </AppBarButton>
        <AppBarButton x:Name="Settings" Tapped="Settings_Tapped" Label="Settings">
            <AppBarButton.Icon>
                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE115;" FontSize="20" />
            </AppBarButton.Icon>
        </AppBarButton>
    </CommandBar>
</UserControl>